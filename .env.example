# Application Settings
APP_NAME=Content Factory Pro
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/content_factory
DATABASE_ECHO=False

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_API_ID=your-telegram-api-id
TELEGRAM_API_HASH=your-telegram-api-hash
TELEGRAM_CHANNEL_ID=-1001234567890

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Anthropic (Claude) Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key
CLAUDE_MODEL=claude-3-opus-20240229

# Content Generation Settings
DEFAULT_LANGUAGE=ru
CONTENT_TONE=professional
CONTENT_MAX_LENGTH=1000
CONTENT_GENERATION_TIMEOUT=30

# Scheduling Settings
SCHEDULER_TIMEZONE=Europe/Moscow
SCHEDULER_JOB_COALESCE=True
SCHEDULER_MAX_INSTANCES=1

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=True

# Admin Panel Settings
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@contentfactory.local
SESSION_TIMEOUT=3600

# Analytics Settings
ENABLE_ANALYTICS=True
ANALYTICS_RETENTION_DAYS=90
ANALYTICS_BATCH_SIZE=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log

# Email Configuration (Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@contentfactory.local

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
CORS_ALLOW_CREDENTIALS=True

# Security
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
API_KEY_HEADER=X-API-Key
